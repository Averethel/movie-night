= simple_form_for @movie, role: "form", html: {class: "form-horizontal"}, defaults: {label_html: {class: ["control-label", "col-sm-2"]}, input_html: {class: ["form-control"]}} do |f|
  .form-group
    = f.input :title
  .form-group
    .col-sm-2.col-sm-offset-10
      = f.button :button, type: :submit, class: ["btn", "btn-primary"] do
        = "Continue"
        %i.fa.fa-caret-right
